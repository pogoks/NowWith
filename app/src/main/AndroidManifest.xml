<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nowwith">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.nowwith.Login_Info"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NowWith">
        <activity android:name=".Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login">
        </activity>
        <activity android:name=".Main">
        </activity>
        <activity android:name=".Register">
        </activity>
        <activity android:name=".Forum">
        </activity>
        <activity android:name=".Forum_Create">
        </activity>
        <activity android:name=".Forum_Main">
        </activity>
        <activity android:name=".Profile">
        </activity>
        <activity android:name=".Profile_ChangeInfo">
        </activity>
        <activity android:name=".Profile_ChangePW">
        </activity>
        <activity android:name=".Chat"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".Chat_Room"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".Chat_CreateRoom">
        </activity>
        <activity android:name=".Chat_CreatePrivate">
        </activity>
        <activity android:name=".Friend">
        </activity>
        <activity android:name=".Friend_Search">
        </activity>
        <activity
            android:name=".Note"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name=".Setting"
            android:theme="@style/Dialog">
        </activity>
    </application>

</manifest>