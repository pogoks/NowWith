<?xml version="1.0" encoding="utf-8"?>

<!-- 2021531003 김범준 11/13 3차 : ID 부여
                                (tv_list_title, tv_list_writer, tv_list_date) 총 3개-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5FFFA"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_baseline_chat_24"
                android:drawableLeft="@drawable/ic_baseline_chat_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#100C3E" />

            <TextView
                android:id="@+id/tv_list_title"
                android:layout_weight="99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#100C3E" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자 :  "
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_list_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="oooo"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_list_date"
                    android:layout_weight="98"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="0000-00-00"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>