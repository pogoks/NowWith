<!-- 2021531003 김범준 11/3 1차 -->
<!-- 2021531003 김범준 11/8 2차 : 각 ID 부여
    (edt_logID, edt_logPW, btn_login, tv_to_register, cb_autologin, tv_guestlogin) 총 6개 -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/intro" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/box" />

        <EditText
            android:id="@+id/edt_logID"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="15dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:hint="ID"
            android:textColorHint="#808080"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:inputType="text"
            android:privateImeOptions="defaultlnputmode=english" />
        <!-- privateImeOptions는 영어만 입력되게 하는 설정 -->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/box" />

        <EditText
            android:id="@+id/edt_logPW"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="PW"
            android:textColorHint="#808080"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:privateImeOptions="defaultlnputmode=english" />
        <!-- privateImeOptions는 영어만 입력되게 하는 설정 -->

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="로그인"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#527d52" />

    <TextView
        android:id="@+id/tv_to_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="회원가입"
        android:textSize="22dp"
        android:textColor="#808080"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cb_autologin"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="자동로그인 활성화"
            android:textSize="18dp"
            android:textColor="#808080"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_guestlogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="GUEST 계정 접속"
        android:textSize="22dp"
        android:textColor="#001ec4"
        android:textStyle="bold" />

</LinearLayout>